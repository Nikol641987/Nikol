<html lang="sk">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Meniny</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #f9f9f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: #333;
    }

    #meniny {
      padding: 1rem 2rem;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      font-size: 1.5rem;
    }
  </style>
</head>
<body>
  <div id="meniny">Načítavam meniny...</div>

  <script>
    const meninySK = {
      "01-01": "Nový rok",
      "01-02": "Alexandra",
      "01-03": "Daniela",
      "05-30": "Ferdinand",
      "12-24": "Adam a Eva",
      "12-25": "1. sviatok vianočný",
      "12-26": "Štefan"
    };

    const dnes = new Date();
    const mesiac = String(dnes.getMonth() + 1).padStart(2, "0");
    const den = String(dnes.getDate()).padStart(2, "0");
    const kluc = `${mesiac}-${den}`;
    const meno = meninySK[kluc] || "Neznáme meno";
    document.getElementById("meniny").textContent = `Dnes má meniny: ${meno}`;
  </script>
</body>
</html>
